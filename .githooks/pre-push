#!/usr/bin/env bash

printf "\e[33;1m%s\e[0m\n" 'Stashing unstaged changes'
git add .
git stash

printf "\e[33;1m%s\e[0m\n" 'Running flutter analyze'
flutter analyze
if [ $? -ne 0 ]; then
  printf "\e[33;1m%s\e[0m\n" 'Failed flutter analyze'
  exit 1
fi

printf "\e[33;1m%s\e[0m\n" 'Running flutter test'
flutter test
if [ $? -ne 0 ]; then
  printf "\e[33;1m%s\e[0m\n" 'Failed flutter test'
  exit 1
fi

printf "\e[33;1m%s\e[0m\n" 'Previously unstaged changes may have been stashed - pop them if you want them back'
